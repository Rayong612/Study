.green{
  background-color: green;
}

swiper-item image{
  margin-top: 0;
  padding-top: 0;
  text-align: center;

  height: 200px;
}

.container{
  padding-top: 0;
  height: 300px;
}

swiper{
  height: 200px;
}

.btn-section{
  margin-top: 10px;
width: 100%;
height: 150rpx;
/* border: 1px solid red ; */
}

.spot,.play{
  height: 75rpx;
  line-height: 75rpx;
  margin-bottom: 10px;
display: flex;
  border-bottom: 1px dotted grey;
  position: relative;
  
}

.spotText,
.playText{
  margin-left: 20px;
}

.spotBtn,
.playBtn{
position: absolute;
top: -5rpx;
right: 5px;

}

.bar-section{
  width: 100%;
  height: 250rpx;
  /* border: 1px solid red; */
  margin-top: 20px;
}

.duration,.interval{
  width: 100%;
  height: 125rpx;
  /* border-bottom: 1px dotted grey; */
}

.durationText,.intervalText{
  margin-left: 20px;
  position: relative;
}

.info{
  position: absolute;
  right: 15px;
}








