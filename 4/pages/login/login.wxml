<!--pages/login/login.wxml-->
<view class="box">
    <view class="item">
        <image src="/img/logo.png"></image>
    </view>

    <view class="item">
        <view class="login-item">
            <view class="login-item-info">用户名</view>
            <view><input bindinput="usernameInput"/></view>
        </view>    
        <view class="login-item">
            <view class="login-item-info">密码</view>
            <view class="login-pwd">
                <input style="flex-grow:1" password="true" bindinput="pwdInput"/>
                <text>忘记密码</text>
            </view>
        </view>  
        <view class="login-item bottom">
            <button type="primary" bindtap="loginBtnClick" class="login-btn">登录</button>
        </view>  
    </view>

    <view class="item bottom-info">
        <view>没有用户?<text>注册</text></view>
        <view class="wx-img">
            <image src="/img/wxlogo.png"></image>
        </view>
    </view>
</view> 
