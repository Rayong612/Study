.box{
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.item{
  flex-grow: 1;
  height: 30%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  width: 90%;
  padding: 0 2%;
}

.item>image{
  margin-top: 50px;
  width: 500rpx;
  height: 128rpx;
margin-bottom: 20px;
}



.login-item{
  width:90%;
  margin-top: 30rpx;
  border-bottom: 1px solid #eee;
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding-bottom: 20rpx;
}

.login-pwd{
  display: flex;
  justify-content: space-between;
  flex-grow: 1;
  align-items: center;
}

.login-pwd text{
  height: 100%;
  font-size: 14px;
  color: #888;
  display: flex
}

.login-btn{
  width: 80%;
  color: white;
  background-color: green;
  border-radius: 8;
  font-size: 14px;
}

.login-btn:hover{
  width: 80%;
  color: white;
  border-radius: 8
}

.bottom-info{
  margin-top: 50px;
}

.wx-img{
  margin-top: 20px;
  width: 90rpx;
  height: 90rpx;
  background-color: white;
}

.wx-img image{
  width: 100%;
  height: 100%;
}